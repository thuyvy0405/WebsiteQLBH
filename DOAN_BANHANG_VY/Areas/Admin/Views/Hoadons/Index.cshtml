@model IEnumerable<DOAN_BANHANG_VY.Models.Hoadon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>Danh sách</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="index">Hóa đơn</a></li>
            <li class="breadcrumb-item active">Danh sách</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section dashboard">

<p>
    <a class="btn btn-info" asp-action="Create">Thêm mới</a>
</p>
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ngay)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TongTien)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TrangThai)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaKhNavigation.Ten)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                            <tr>
                                 <td>
                                    @Html.DisplayFor(modelItem => item.Ngay)
                                 </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TongTien)
                                </td>
                                <td>

                                            @if (item.TrangThai == 0)
                                            {
                                                <text>Chưa xác nhận</text>
                                            }
                                            else if(item.TrangThai ==1)
                                            {
                                                <text>Xác nhận</text>
                                            }
                                            else if (item.TrangThai == 2)
                                            {
                                                <text>Đang giao hàng</text>
                                            }
                                            else if (item.TrangThai == 3)
                                            {
                                                <text>Đã giao hàng</text>
                                            }
                                            else if (item.TrangThai == 4)
                                            {
                                                <text>Đơn hàng đã bị hủy bởi khách hàng</text>
                                            }
                                            else if (item.TrangThai == 5)
                                            {
                                                <text>Đơn hàng đã bị hủy bởi cửa hàng</text>
                                            }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaKhNavigation.Ten)
                                </td>
                                <td>
                                            <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.MaHd"><i class="bi bi-pencil-square"></i></a> |
                                            <a class="btn btn-success" asp-action="Details" asp-route-id="@item.MaHd"><i class="bi bi-eye-fill"></i></a> |
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MaHd"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>
