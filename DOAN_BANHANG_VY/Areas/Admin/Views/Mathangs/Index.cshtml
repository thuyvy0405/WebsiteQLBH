@model IEnumerable<DOAN_BANHANG_VY.Models.Mathang>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1>Danh sách</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="index">Mặt hàng</a></li>
            <li class="breadcrumb-item active">Danh sách</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section dashboard">

<p>
    <a class="btn btn-info" asp-action="Create">Thêm mới</a>
</p>
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ten)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GiaGoc)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.GiaBan)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SoLuong)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MoTa)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.HinhAnh)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaDmNavigation.Ten)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaDvtNavigation.Ten)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaNcuNavigation.Ten)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ten)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GiaGoc)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GiaBan)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoLuong)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MoTa)
                                    </td>
                                    <td>
                                            <img width="50" src="~/images/sanpham/@item.HinhAnh" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaDmNavigation.Ten)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaDvtNavigation.Ten)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaNcuNavigation.Ten)
                                    </td>
                                    <td>
                                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.MaMh"><i class="bi bi-pencil-square"></i></a> |
                                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.MaMh"><i class="bi bi-eye-fill"></i></a> |
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MaMh"><i class="bi bi-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>

